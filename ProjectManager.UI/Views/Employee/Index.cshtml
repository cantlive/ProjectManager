@using ProjectManager.Core.Models
@using ProjectManager.UI.ViewModels
@model EmployeeListViewModel

<h2>Employees</h2>

<a href="@Url.Action("Create")" class="create-employee-btn">Create New Employee</a>

<table>
    <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Middle name</th>
        <th>Email</th>
        <th class="actions-column">Actions</th>
    </tr>
    @foreach (var employee in Model.Employees)
    {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.MiddleName</td>
            <td>@employee.Email</td>
            <td class="actions-column">
                <div class="action-buttons">
                    <a href="@Url.Action("Edit", new { id = employee.Id })" class="btn edit-btn">Edit</a>
                    <a href="@Url.Action("Delete", new { id = employee.Id })" class="btn delete-btn">Delete</a>
                </div>
            </td>
        </tr>
    }
</table>