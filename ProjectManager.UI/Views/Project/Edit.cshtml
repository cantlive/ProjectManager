@model ProjectManager.Core.Models.UpdateProjectDto

<h2>Edit Project</h2>

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />

    <div>
        <label>Name</label>
        <input asp-for="Name" required />
    </div>

    <div>
        <label>Customer Company</label>
        <input asp-for="CustomerCompany" required />
    </div>

    <div>
        <label>Contractor Company</label>
        <input asp-for="ContractorCompany" required />
    </div>

    <div>
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" required />
    </div>

    <div>
        <label>End Date</label>
        <input asp-for="EndDate" type="date" required />
    </div>

    <div>
        <label>Priority</label>
        <input asp-for="Priority" type="number" required />
    </div>

    <button type="submit">Save</button>
</form>